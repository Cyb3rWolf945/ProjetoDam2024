<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user_related.searchUsers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- RadioGroup para selecionar o tipo de pesquisa -->
        <RadioGroup
            android:id="@+id/searchOptionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"> <!-- espaço entre o RadioGroup e o campo de pesquisa -->

            <RadioButton
                android:id="@+id/searchByEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesquisar por Email"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/black"
                android:checked="true"/> <!-- email é o tipo padrão -->

            <RadioButton
                android:id="@+id/searchByName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesquisar por Nome e Apelido"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/black" />
        </RadioGroup>

        <!-- Barra de pesquisa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="@string/procurar_utilizadores"
                app:boxBackgroundColor="#F1EEEA"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomEnd="45dp"
                app:boxCornerRadiusBottomStart="45dp"
                app:boxCornerRadiusTopEnd="45dp"
                app:boxCornerRadiusTopStart="45dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:background="@drawable/rounded_text_field"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão de pesquisa -->
            <Button
                android:id="@+id/search_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:backgroundTint="#F58C73"
                style="?attr/materialIconButtonFilledTonalStyle"
                app:icon="@drawable/vector"
                app:iconTint="@android:color/white"
                app:iconGravity="textTop"
                app:iconPadding="4dp" />
        </LinearLayout>

        <!-- RecyclerView para exibir os resultados -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/users_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:padding="8dp" />

    </LinearLayout>

</FrameLayout>
