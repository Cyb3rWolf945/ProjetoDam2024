<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user_related.searchUsers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="@string/procurar_utilizadores"
                app:boxBackgroundColor="#F1EEEA"
                app:boxBackgroundMode="none"
                app:boxCornerRadiusBottomEnd="45dp"
                app:boxCornerRadiusBottomStart="45dp"
                app:boxCornerRadiusTopEnd="45dp"
                app:boxCornerRadiusTopStart="45dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:background="@drawable/rounded_text_field"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/search_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:backgroundTint="#F58C73"
                style="?attr/materialIconButtonFilledTonalStyle"
                app:icon="@drawable/vector"
                app:iconTint="@android:color/white"
                app:iconGravity="textTop"
                app:iconPadding="4dp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/user_info_layout"
            android:visibility="gone"
            android:layout_marginTop="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_background_cards"
            >

            <TextView
                android:id="@+id/NomeApelidoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome_e_apelido"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/EmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>





</FrameLayout>
